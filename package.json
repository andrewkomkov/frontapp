{
  "name": "storefront-monorepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "templates/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:platform": "turbo run build --filter=!auto",
    "build:auto": "turbo run build --filter=!demo-platform",
    "platform": "turbo run dev --parallel --filter=demo-platform",
    "auto": "turbo run dev --parallel --filter=auto",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.2.3",
    "esbuild": "^0.17.3",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "prettier": "^2.7.1",
    "resize-observer-polyfill": "^1.5.1",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@ducanh2912/next-pwa": "^10.2.9",
    "next": "^15.3.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.34.3",
    "tailwindcss": "^4.1.11",
    "terser": "^5.43.1",
    "typescript": "^5.8.3"
  },
  "packageManager": "yarn@1.22.19"
}
